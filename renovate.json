{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "branchPrefix": "issue/renovate-",
  "fetchReleaseNotes": false,
  "separateMinorPatch": true,
  "bbUseDefaultReviewers": false,
  "reviewers": [
    "aswan",
    "bmaccarthy",
    "ablekhman",
    "wcustodio",
    "cwilliams",
    "mwieclawska",
    "mtokarski",
    "msmolczewski",
    "zstruczewska"
    ],
  "reviewersSampleSize": 2,
  "packageRules": [
    {
      "packagePatterns": [
        "^com.atlassian"
      ],
      "allowedVersions": "!/-[0-9a-f]{6,10}$/"
    },
    {
      "packagePatterns": [
        "dom4j:dom4j",
        "log4j:log4j",
        "jaxen:jaxen",
        "^org.codehaus.jackson",
        "opensymphony:oscore",
        "commons-httpclient:commons-httpclient"
      ],
      "allowedVersions": "/.+-atlassian-[0-9]+$/"
    },
    {
      "packagePatterns": [
        "^com.atlassian",
        "com.google.code.findbugs:annotations",
        "biz.aQute.bnd:biz.aQute.bndlib"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "packagePatterns": [
        "^org.springframework:"
      ],
      "updateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    },
    {
      "updateTypes": [
        "patch"
      ],
      "groupName": "patches"
    }
  ]
}
