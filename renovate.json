{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "branchPrefix": "issue/renovate-",
  "fetchReleaseNotes": false,
  "packageRules": [
    {
      "packagePatterns": [
        "^com.atlassian"
      ],
      "allowedVersions": "!/-[0-9a-f]{6,10}$/",
      "groupName": "Atlassian"
    },
    {
      "packagePatterns": [
        "dom4j:dom4j",
        "log4j:log4j",
        "jaxen:jaxen",
        "^org.codehaus.jackson",
        "opensymphony:oscore",
        "commons-httpclient:commons-httpclient"
      ],
      "allowedVersions": "/.+-atlassian-[0-9]+$/",
      "groupName": "3rd party forks"
    },
    {
      "updateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "non-major"
    }
  ]
}
