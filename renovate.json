{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "branchPrefix": "issue/renovate-",
  "fetchReleaseNotes": false,
  "separateMinorPatch": true,
  "packageRules": [
    {
      "packagePatterns": [
        "^com.atlassian"
      ],
      "allowedVersions": "!/-[0-9a-f]{6,10}$/"
    },
    {
      "packagePatterns": [
        "dom4j:dom4j",
        "log4j:log4j",
        "jaxen:jaxen",
        "^org.codehaus.jackson",
        "opensymphony:oscore",
        "commons-httpclient:commons-httpclient"
      ],
      "allowedVersions": "/.+-atlassian-[0-9]+$/"
    },
    {
      "packagePatterns": [
        "com.google.code.findbugs:annotations"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "packagePatterns": [
        "^org.springframework:"
      ],
      "updateTypes": [
        "patch"
      ]
    },
    {
      "updateTypes": [
        "patch"
      ],
      "groupName": "patches"
    }
  ]
}
