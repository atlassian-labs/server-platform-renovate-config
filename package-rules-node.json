{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": ["eslint", "stylelint", "prettier"],
      "matchPackagePatterns": ["^eslint", "^stylelint", "^prettier", "^@typescript-eslint/"],
      "groupName": "frontend - lint"
    },
    {
      "matchPackageNames": ["karma", "mocha", "sinon", "chai"],
      "matchPackagePatterns": ["^karma", "^mocha", "^sinon", "^chai"],
      "groupName": "frontend - test"
    },
    {
      "matchPackageNames": ["jest", "ts-jest"],
      "matchPackagePatterns": ["^jest"],
      "groupName": "frontend - jest"
    },
    {
      "matchPackagePatterns": ["^@babel/"],
      "groupName": "frontend - babel"
    },
    {
      "matchPackageNames": [
        "atlassian-webresource-webpack-plugin",
        "mini-css-extract-plugin",
        "webpack"
      ],
      "matchPackagePatterns": ["^webpack", "-loader$"],
      "groupName": "frontend - webpack"
    },
    {
      "matchPackageNames": ["rollup"],
      "matchPackagePatterns": ["^@rollup/", "^rollup"],
      "groupName": "frontend - rollup"
    },
    {
      "matchPackagePatterns": ["^@testing-library/"],
      "groupName": "frontend - Testing Library"
    }
  ]
}
