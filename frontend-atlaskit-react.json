{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "frontend - atlaskit",
      "description": "Enable all upgrades of Atlassian UI library packages on default branch",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@atlaskit/"],
      "matchBaseBranches": ["/^main$/", "/^master$/"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "prPriority": 1,
      "separateMajorMinor": false,
      "enabled": true
    },
    {
      "groupName": "frontend - atlaskit - stable branches",
      "description": "Enable minor and patch upgrades of Atlassian UI library packages on stable branches",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@atlaskit/"],
      "matchBaseBranches": ["/^stable\\/.*/", "/^release\\/.*/"],
      "matchUpdateTypes": ["minor", "patch"],
      "separateMajorMinor": true,
      "enabled": true
    },
    {
      "groupName": "frontend - atlaskit - stable branches - disable major",
      "description": "Disable major upgrades of Atlassian UI library packages on stable branches",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@atlaskit/"],
      "matchBaseBranches": ["/^stable\\/.*/", "/^release\\/.*/"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "frontend - React plugin",
      "description": "Atlassian React plugin wrapping platform version React library and its common dependencies (https://bitbucket.org/atlassian/atlassian-plugins-react)",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["@atlassian/atlassian-plugins-react"],
      "enabled": true
    },
    {
      "groupName": "frontend - React",
      "description": "React library and its common dependencies",
      "matchManagers": ["npm"],
      "matchBaseBranches": ["/^main$/", "/^master$/"],
      "matchPackageNames": ["react", "react-dom"],
      "rangeStrategy": "pin",
      "matchNewValue": "18.3.1",
      "separateMajorMinor": false,
      "enabled": true
    }
  ],
  "postUpdateOptions": ["npmDedupe", "yarnDedupeHighest"]
}
